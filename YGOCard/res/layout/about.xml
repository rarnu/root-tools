<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/white" android:padding="8dip"
	android:layout_margin="8dip">

	<ImageView android:id="@+id/ivIcon" android:layout_width="48dip"
		android:layout_height="48dip" android:background="@drawable/icon" />

	<TextView android:id="@+id/appName" android:layout_width="fill_parent"
		android:layout_height="24dip" android:text="@string/app_name"
		android:textColor="@color/black" android:layout_toRightOf="@+id/ivIcon"
		android:layout_marginLeft="8dip" android:gravity="left|center_vertical" />

	<TextView android:id="@+id/tvVersion" android:layout_width="fill_parent"
		android:layout_height="24dip" android:layout_toRightOf="@+id/ivIcon"
		android:layout_below="@+id/appName" android:gravity="left|center_vertical"
		android:text="@string/app_version" android:layout_marginLeft="8dip" />

	<TextView android:id="@+id/tvSplit" android:layout_width="fill_parent"
		android:layout_height="1dip" android:layout_below="@+id/ivIcon"
		android:layout_marginTop="8dip" android:background="@color/gray" />

	<TextView android:id="@+id/tvAboutData" android:layout_width="fill_parent"
		android:layout_height="24dip" android:textColor="@color/black"
		android:gravity="left|center_vertical" android:layout_marginLeft="8dip"
		android:layout_marginRight="8dip" android:layout_below="@+id/tvSplit"
		android:layout_marginTop="8dip" android:text="@string/about_data" />

	<TextView android:id="@+id/tvAboutApplication"
		android:layout_width="fill_parent" android:layout_height="24dip"
		android:textColor="@color/orange" android:gravity="left|center_vertical"
		android:layout_marginLeft="8dip" android:layout_marginRight="8dip"
		android:layout_below="@+id/tvAboutData" android:layout_marginTop="8dip"
		android:text="@string/about_application" />

	<TextView android:id="@+id/tvAboutDate" android:layout_width="fill_parent"
		android:layout_height="24dip" android:textColor="@color/black"
		android:gravity="left|center_vertical" android:layout_marginLeft="8dip"
		android:layout_marginRight="8dip" android:layout_below="@+id/tvAboutApplication"
		android:layout_marginTop="8dip" android:text="@string/about_date" />

	<ImageView android:id="@+id/ivOcgSoft" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@+id/tvAboutDate"
		android:background="@drawable/logo" android:layout_centerHorizontal="true"
		android:layout_marginTop="8dip" />


</RelativeLayout>
