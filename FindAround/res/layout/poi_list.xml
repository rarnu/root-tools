<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.baidu.mapapi.MapView
        android:id="@+id/mvMap"
        android:layout_width="fill_parent"
        android:layout_height="288dip"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/tbTitle"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#AA000000" >

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="14dip"
            android:layout_height="28dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/btn_back_style"
            android:contentDescription="@null"
            android:textColor="@color/white"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivSplit1"
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/btnLeft"
            android:background="@drawable/split"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/ivSplit1"
            android:gravity="left|center_vertical"
            android:textColor="@color/white"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/backArea"
            android:layout_width="80dip"
            android:layout_height="fill_parent" />

        <ImageView
            android:id="@+id/ivSplit"
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/btnRight"
            android:background="@drawable/split"
            android:contentDescription="@null" />

        <Button
            android:id="@+id/btnRight"
            android:layout_width="28dip"
            android:layout_height="28dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:background="@drawable/btn_locate_style"
            android:contentDescription="@null" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvPoi"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/mvMap"
        android:cacheColorHint="#00000000" >
    </ListView>

    <RelativeLayout
        android:id="@+id/layMapBottom"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:background="#AA000000"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/layGeoItem"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvPoiName"
                android:layout_width="fill_parent"
                android:layout_height="24dip"
                android:gravity="left|center_vertical"
                android:textColor="@color/white"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/tvPoiAddress"
                android:layout_width="fill_parent"
                android:layout_height="24dip"
                android:layout_below="@+id/tvPoiName"
                android:ellipsize="marquee"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:maxWidth="280dip"
                android:singleLine="true"
                android:textColor="@color/silver"
                android:textSize="12dip" />

            <Button
                android:id="@+id/btnPoiDistance"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_route_style"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/route"
                android:textColor="#FF372100"
                android:textSize="16dip" />

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="75dip"
                android:background="@drawable/search_route"
                android:contentDescription="@null" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnReturnList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/address_bar_background"
            android:text="@string/return_list"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="fill_parent"
        android:layout_height="64dip"
        android:layout_centerInParent="true"
        android:layout_margin="16dip"
        android:background="#AA000000"
        android:gravity="center"
        android:text="@string/searching"
        android:textColor="@color/white"
        android:textSize="20dip"
        android:visibility="gone" />

</RelativeLayout>