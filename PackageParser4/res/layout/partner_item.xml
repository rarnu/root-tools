<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dip"
    android:padding="8dip" >

    <ImageView
        android:id="@+id/imgIconEoe"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dip"
        android:background="@drawable/icon_eoe"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tvEoeName"
        android:layout_width="wrap_content"
        android:layout_height="24dip"
        android:layout_marginRight="8dip"
        android:layout_toLeftOf="@+id/imgIconEoe"
        android:gravity="right|center_vertical"
        android:text="@string/eoe_title"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvEoeDesc"
        android:layout_width="match_parent"
        android:layout_height="24dip"
        android:layout_below="@+id/tvEoeName"
        android:layout_marginRight="8dip"
        android:layout_toLeftOf="@+id/imgIconEoe"
        android:gravity="right|center_vertical"
        android:text="@string/eoe_desc" />

</RelativeLayout>